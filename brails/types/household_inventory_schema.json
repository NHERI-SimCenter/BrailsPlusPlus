{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HouseholdInventory",
  "description": "Schema for validating HouseholdInventory JSON data",
  "type": "object",
  "required": ["households"],
  "properties": {
    "type": {
      "type": "string",
      "const": "HouseholdInventory"
    },
    "generated": {
      "type": "string",
      "description": "Timestamp of when the inventory was generated"
    },
    "brails_version": {
      "type": "string",
      "description": "Version of BRAILS used to generate the inventory"
    },
    "households": {
      "type": "object",
      "description": "Dictionary of households with household IDs as keys",
      "additionalProperties": {
        "type": "object",
        "description": "Household features",
        "additionalProperties": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { 
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "number" }
                ]
              }
            }
          ]
        }
      }
    }
  }
}